@page
@model CASPAR.Pages.Instructors.Modalities.IndexModel
@{
}

<div class="container">
    <div class="row pt=4">
        <!--Start Row-->
        <div class="col-6">
            <!--50% of row-->
            <h2 class="text-primary">
                Modalities
            </h2>
        </div><!-- End 1st Column-->
        <div class="col-7 text-end">
            <!--50% row right justified-->
            <a asp-page="Upsert" asp-route-id="0" asp-route-instructor="@Model.createId" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Modality
            </a>
        </div> <!--End 2nd Column-->
    </div> <!--End Row-->
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Modality
                </th>
                <th>
                    Description
                </th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            <!--Loop though to create each row-->
            @foreach (var obj in Model.objModalityList)
            {
                <tr>
                    <td style="width:70%">
                        @obj.Modality.ModalityName
                    </td>
                    <td style="width:70%">
                        @obj.Modality.ModalityDescription
                    </td>
                    <td style="width:20%">
                        <div class="w-75% btn-group" role="group">
                            <div class="text-center">
                                <a href="/Instructors/Times/Index?id=@obj.InstructorWishlistModalityId" class="btn btn-primary text-white" style="cursor:pointer; width: 100px;">
                                    <i class="far fa-edit"></i> View
                                </a>

                                <a href="/Instructors/Modalities/Upsert?id=@obj.InstructorWishlistModalityId&instructor=@obj.InstructorWishListDetailsId" class="btn btn-success text-white" style="cursor:pointer; width: 100px;">
                                    <i class="far fa-edit"></i> Edit
                                </a>

                                <a href="/Instructors/Modalities/Delete?id=@obj.InstructorWishlistModalityId&instructor=@obj.InstructorWishListDetailsId" class="btn btn-danger text-white" style="cursor:pointer; width: 100px;">
                                    <i class="far fa-trash-alt"></i> Delete
                                </a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>