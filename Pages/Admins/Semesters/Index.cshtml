@page
@model CASPAR.Pages.Admins.Semesters.IndexModel
@{
    ViewData["Title"] = "Manage Semesters";
}
@if (User.IsInRole("Admin")){
<div class="container">
    <div class="row pt=4">
        <!--Start Row-->
        <div class="col-6">
            <!--50% of row-->
            <h2 class="text-primary">
                Manage Semesters
            </h2>
        </div><!-- End 1st Column-->
        <div class="col-7 text-end">
            <!--50% row right justified-->
            <a asp-page="Upsert" asp-route-id="0" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Semesters
            </a>
        </div> <!--End 2nd Column-->
    </div> <!--End Row-->
    <table class="table table-bordered table-striped" id="DT_Semester" style="width:100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Begin Date
                </th>
                <th>
                    End Date
                </th>
                <th>
                    Register Date
                </th>
                <th>
                    Status
                </th>
                <th>
                    Type
                </th>
                <th>&nbsp;</th>
            </tr>
        </thead>

    </table>
</div>
}
else
{
    Response.Redirect("../../../..");
}
@section Scripts
    {
    <script src="/js/semester.js"> </script>
}
