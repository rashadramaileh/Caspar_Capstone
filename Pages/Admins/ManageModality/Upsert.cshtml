@page
@model CASPAR.Pages.Admins.ManageModality.UpsertModel

<form method="post" asp-page="Upsert" onsubmit="return ValidateInput()" enctype="multipart/form-data">
    <input asp-for="objModality.ModalityId" hidden />
    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-4 row">
                <div class="col-12 pb-2">
                    <h2 class="text-primary">@(Model.objModality.ModalityId != 0 ? "Update " : "Create ")Modality</h2>
                    <hr />
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="objModality.ModalityName" class="form-control border-0 shadow" />
                    <label asp-for="objModality.ModalityName" class="ms-2">Modality</label>
                    <span asp-validation-for="objModality.ModalityName" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="objModality.ModalityDescription" class="form-control border-0 shadow" />
                    <label asp-for="objModality.ModalityDescription" class="ms-2">Modality Description</label>
                    <span asp-validation-for="objModality.ModalityDescription" class="text-danger"></span>
                </div>
                <div class="col-12">
                    @if (Model.objModality.ModalityId != 0)
                    {
                        <button type="submit" onclick="return ValidateInput()" class="btn btn-primary" style="width:150px">Update</button>
                    }
                    else
                    {
                        <button type="submit" onclick="return ValidateInput()" class="btn btn-primary" style="width:150px">Create</button>
                    }
                    <!--END ELSE -->
                    <a asp-page="/Upsert" class="btn btn-secondary" style="width:150px">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>
