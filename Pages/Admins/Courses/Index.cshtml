@page
@model CASPAR.Pages.Admins.Courses.IndexModel
@{
    ViewData["Title"] = "Manage Courses";
}
@if (User.IsInRole("Admin"))
{
<div class="container">
    <div class="row pt=4">
        <!--Start Row-->
        <div class="col-6">
            <!--50% of row-->
            <h2 class="text-primary">
                Manage Courses
            </h2>
        </div><!-- End 1st Column-->
        <div class="col-7 text-end">
            <!--50% row right justified-->
            <a asp-page="Upsert" asp-route-id="0" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Course
            </a>
        </div> <!--End 2nd Column-->
    </div> <!--End Row-->
    <table class="table table-bordered table-striped" id="DT_Course" style="width:100%">
        <thead>
            <tr>
                <th>
                    Prefix
                </th>
                <th>
                    Number
                </th>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Credit Hours
                </th>
                <th>
                    Program
                </th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
            </tr>
        </thead>

    </table>
</div>
}
else
{
    Response.Redirect("../../../..");
}
@section Scripts
    {
    <script src="~/js/course.js"> </script>
}
