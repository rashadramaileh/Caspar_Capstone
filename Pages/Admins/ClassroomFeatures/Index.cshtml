@page
@model CASPAR.Pages.Admins.ClassroomFeatures.IndexModel
@{
}
@if (User.IsInRole("Admin"))
{
<div class="container">
    <div class="row pt=4">
        <!--Start Row-->
        <div class="col-6">
            <!--50% of row-->
            <h2 class="text-primary">
                Classroom Feature List
            </h2>
        </div><!-- End 1st Column-->
        <div class="col-6 text-end">
            <!--50% row right justified-->
            <a asp-page="Upsert" asp-route-id="0" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Classroom Feature
            </a>
        </div> <!--End 2nd Column-->
    </div> <!--End Row-->
    <table class="table table-bordered table-striped" id="DT_ClassroomFeatures" style="width:100%">
        <thead>
            <tr>
                <th>
                    Feature Name
                </th>
                <th>&nbsp;</th>
                    <th>&nbsp;</th>
            </tr>
        </thead>
    </table>
</div> <!--Close Container-->
} else
{
    Response.Redirect("../../../..");
}
@section Scripts
    {
    <script src="~/js/classroomfeatures.js"></script>
}