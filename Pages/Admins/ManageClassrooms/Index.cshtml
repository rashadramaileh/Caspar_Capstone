@page
@model CASPAR.Pages.Admins.ManageClassrooms.IndexModel
@if (User.IsInRole("Admin"))
{
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Classroom List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-route-id="0" asp-page="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Classroom
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped" id="DT_Classroom" style="width:100%">
        <thead>
            <tr>
                <th>Room Number</th>
                <th>Capacity</th>
                <th>Building</th>
                <th>Campus</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
            </tr>
        </thead>

    </table>
</div>
} else {
    Response.Redirect("../../../..");
}
@section Scripts
    {
    <script src="~/js/classroom.js"> </script>
}
