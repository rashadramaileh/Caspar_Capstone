@page
@model CASPAR.Pages.Admins.ManageInstructors.IndexModel
@{
}
<div class="container">
    <div class="row pt=4">
        <!--Start Row-->
        <div class="col-6">
            <!--50% of row-->
            <h2 class="text-primary">
                Major List
            </h2>
        </div><!-- End 1st Column-->
        <div class="col-6 text-end">
            <!--50% row right justified-->
            <a asp-page="Upsert" asp-route-id="0" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Instructor
            </a>
        </div> <!--End 2nd Column-->
    </div> <!--End Row-->
    <table class="table table-bordered table-striped" id="DT_Instructors" style="width:100%">
        <thead>
            <tr>
                <th>
                     Adjunct (A)
                </th>
                <th>
                     First Name
                </th>
                <th>
                     Last Name
                </th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            <!-- For loop-->
            @foreach (var obj in Model.objInstructorList)
            {
                <tr>
                    <td style="width:20%"> (@obj.Adjunct == true) ? "(A)":""</td>
                    <td style="width:30%"> @obj.First</td>
                    <td style="width:30%"> @obj.Last</td>
                    
                    <td style="width:20%">
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <!-- asp-route-[variable name] -->
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }


        </tbody>
    </table>
</div> <!--Close Container-->