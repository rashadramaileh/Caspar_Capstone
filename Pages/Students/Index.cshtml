@page
@model CASPAR.Pages.Students.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row pt=4">
        <!--Start Row-->
        <div class="col-6">
            <!--50% of row-->
            <h2 class="text-primary">
                Student Home
            </h2>
        </div><!-- End 1st Column-->
        <div class="col-6 text-end">
            <!--50% row right justified-->
            <a asp-page="Edit" asp-route-id="0" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Wishlist
            </a>
        </div> <!--End 2nd Column-->
    </div> <!--End Row-->
    <table class="table table-bordered table-striped" id="Student_Wishlist" style="width:100%">
        <thead>
            <tr>
                <th>
                    Student
                </th>
                <th>
                    Course
                </th>
                <th>
                    Format
                </th>
                <th>
                    Day Block
                </th>
                <th>
                    Time Block
                </th>
                <th>
                    Semester
                </th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        
    </table>
</div>
@section Scripts
    {
    <script src="~/js/products.js"></script>
}
