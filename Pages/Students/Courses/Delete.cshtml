@page
@model CASPAR.Pages.Students.Courses.DeleteModel
@{
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-danger py-2">Delete Course</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="submit">
            <div class="border p-3">
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input readonly asp-for="objCourse.CourseName" class="form-control border-0 shadow" />
                    <label asp-for="objCourse.CourseName" class="ms-2">Course Name</label>
                    <span asp-validation-for="objDetailsList.CourseId" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input readonly asp-for="objDetailsList.StudentNotes" class="form-control border-0 shadow" />
                    <label asp-for="objDetailsList.StudentNotes" class="ms-2">Notes</label>
                    <span asp-validation-for="objDetailsList.StudentNotes" class="text-danger"></span>
                </div>
                <input asp-for="objDetailsList.StudentWishlistDetailsId" type="hidden">
                <input asp-for="objDetailsList.StudentWishlistId" hidden />
                <div class="submit pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a href="/Students/Courses/WishlistDetails?id=@Model.objDetailsList.StudentWishlistId" class="btn btn-outline-primary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>