@page
@model CASPAR.Pages.Students.UpsertModel

@{
}
<form method="post" asp-page="Create" onsubmit="return ValidateInput()" enctype="multipart/form-data">
    <input asp-for="objStudentWishlist.StudentWishListId" hidden />
    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-4 row">
                <div class="col-12 pb-2">
                    <h2 class="text-primary">@(Model.objStudentWishlist.StudentWishListId != 0 ? "Update " : "Create ")Wishlist</h2>
                    <hr />
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="objStudentWishlist.Course"></label>
                    <select id="ddlCourse" asp-for="objStudentWishlist.CourseId" asp-items="@Model.CourseList" class="form-select">
                        <option disabled selected>--Select Course--</option>
                    </select>
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="objStudentWishlist.StudentFormat"></label>
                    <select id="ddlFormat" asp-for="objStudentWishlist.StudentFormat" asp-items="@Model.FormatList" class="form-select">
                        <option disabled selected>--Select Format--</option>
                    </select>
                </div>
                <div class="col-12">
                    @if (Model.objStudentWishlist.StudentWishListId != 0)
                    {
                        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
                    }
                    else
                    {
                        <button type="submit" onclick="return ValidateInput()" class="btn btn-primary" style="width:150px">Create</button>
                    }
                    <!--END ELSE -->
                    <a asp-page="Index" class="btn btn-secondary" style="width:150px">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
    {
    <script>

        tinymce.init({
            selector: 'textarea',
            plugins: "lists",
            menubar: "file edit format"
        });

        function ValidateInput() {
            if ($('#ddlCourse option:selected').val() == 0) {
                swal.fire('Error', 'Please Select a Course', 'error')
                return false
            }

            if ($('#ddlFormat option:selected').val() == 0) {
                swal.fire('Error', 'Please Select a Manufacturer', 'error')
                return false
            }

            return true;
        }
    </script>
}
